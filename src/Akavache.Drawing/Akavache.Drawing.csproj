<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(AkavacheTargetFrameworks)</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <Description>Drawing and bitmap support for Akavache using Splat.Drawing</Description>
  </PropertyGroup>

  <ItemGroup>
    <Using Remove="Foundation" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akavache.Core\Akavache.Core.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Splat.Drawing" Version="15.4.1" />
  </ItemGroup>

</Project>
