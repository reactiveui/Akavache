<Project Sdk="MSBuild.Sdk.Extras">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;Xamarin.iOS10;Xamarin.Mac20;Xamarin.TVOS10;MonoAndroid11.0;tizen40;net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net462;uap10.0.16299</TargetFrameworks>
    <AssemblyName>Akavache.Sqlite3</AssemblyName>
    <RootNamespace>Akavache.Sqlite3</RootNamespace>
    <Description>Akavache Sqlite3</Description>
    <PackageId>akavache.sqlite3</PackageId>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <DefineConstants>$(DefineConstants);USE_SQLITEPCL_RAW;USE_NEW_REFLECTION_API</DefineConstants>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SQLitePCLRaw.core" Version="2.0.7" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
    <PackageReference Include="Splat" Version="14.*" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Remove="EncryptedBlobCache.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="PerformanceGraphs.xlsx" />
    <None Remove="sqlite-ng-notes.md" />
    <None Remove="sqlite3-hint.txt" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('Xamarin.Mac')) ">
    <Reference Include="netstandard" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Akavache.Core\Akavache.Core.csproj" />
  </ItemGroup>
</Project>
