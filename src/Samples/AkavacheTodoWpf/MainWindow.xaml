<Window
    x:Class="AkavacheTodoWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:AkavacheTodoWpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AkavacheTodoWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AkavacheTodoWpf.ViewModels"
    Title="Akavache Todo WPF"
    Width="1000"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:IntToBooleanConverter x:Key="IntToBoolConverter" />
        <conv:StringToBooleanConverter x:Key="StringToBoolConverter" />
        <conv:InverseBooleanConverter x:Key="InverseBoolConverter" />

        <!--  Styles  -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#673AB7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="3" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Gray" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="20"
            Background="#673AB7">
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Akavache Todo Demo - WPF" />
                <TextBlock
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding StatusMessage}" />
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!--  Statistics Panel  -->
                <GroupBox Margin="0,0,0,15" Header="Statistics">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Text="{Binding TodoStats.TotalTodos}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Total" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="Green"
                                Text="{Binding TodoStats.CompletedTodos}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Completed" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="Red"
                                Text="{Binding TodoStats.OverdueTodos}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Overdue" />
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="Orange"
                                Text="{Binding TodoStats.DueSoonTodos}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="Due Soon" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!--  Add New Todo Section  -->
                <GroupBox Margin="0,0,0,15" Header="Add New Todo">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBox
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="5"
                                Padding="5"
                                FontSize="14"
                                Text="{Binding NewTodoTitle, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border
                                                        Background="White"
                                                        BorderBrush="Gray"
                                                        BorderThickness="1"
                                                        CornerRadius="3">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <VisualBrush
                                                                        AlignmentX="Left"
                                                                        AlignmentY="Center"
                                                                        Stretch="None">
                                                                        <VisualBrush.Visual>
                                                                            <TextBlock
                                                                                Margin="5,0"
                                                                                Foreground="Gray"
                                                                                Text="Todo title..." />
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <TextBox
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Height="60"
                                Margin="5"
                                Padding="5"
                                AcceptsReturn="True"
                                FontSize="14"
                                Text="{Binding NewTodoDescription, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border
                                                        Background="White"
                                                        BorderBrush="Gray"
                                                        BorderThickness="1"
                                                        CornerRadius="3">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <VisualBrush
                                                                        AlignmentX="Left"
                                                                        AlignmentY="Top"
                                                                        Stretch="None">
                                                                        <VisualBrush.Visual>
                                                                            <TextBlock
                                                                                Margin="5,5"
                                                                                Foreground="Gray"
                                                                                Text="Description (optional)..." />
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <DatePicker
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="5"
                                Padding="5"
                                SelectedDate="{Binding NewTodoDueDate}" />

                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                Padding="5"
                                ItemsSource="{Binding PriorityOptions}"
                                SelectedItem="{Binding NewTodoPriority}" />

                            <Button
                                Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Width="120"
                                HorizontalAlignment="Center"
                                Command="{Binding AddTodoCommand}"
                                Content="Add Todo"
                                Style="{StaticResource PrimaryButton}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!--  Todo List  -->
                <GroupBox Margin="0,0,0,15" Header="Your Todos">
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding Todos}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="2"
                                    Padding="10"
                                    Background="{Binding BackgroundBrush}"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Priority Indicator  -->
                                        <Rectangle
                                            Grid.Column="0"
                                            Width="4"
                                            Margin="0,0,10,0"
                                            Fill="{Binding PriorityBrush}" />

                                        <!--  Todo Content  -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="{Binding ForegroundBrush}"
                                                Text="{Binding TodoItem.Title}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{Binding ForegroundBrush}"
                                                Text="{Binding TodoItem.Description}"
                                                TextWrapping="Wrap"
                                                Visibility="{Binding TodoItem.Description, Converter={StaticResource StringToBoolConverter}, ConverterParameter={StaticResource BoolToVisibilityConverter}}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding DueDateDisplay}" />
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="Purple"
                                                Text="{Binding TagsDisplay}" />
                                        </StackPanel>

                                        <!--  Completion Toggle  -->
                                        <CheckBox
                                            Grid.Column="2"
                                            Margin="10,0"
                                            VerticalAlignment="Center"
                                            IsChecked="{Binding TodoItem.IsCompleted}" />

                                        <!--  Action Buttons  -->
                                        <StackPanel
                                            Grid.Column="3"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Width="50"
                                                Height="25"
                                                Command="{Binding EditCommand}"
                                                Content="Edit"
                                                Style="{StaticResource SecondaryButton}" />
                                            <Button
                                                Width="25"
                                                Height="25"
                                                Margin="3"
                                                Background="Red"
                                                BorderThickness="0"
                                                Command="{Binding DeleteCommand}"
                                                Content="Ã—"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="White" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <!--  Notifications Panel  -->
                <GroupBox
                    Margin="0,0,0,15"
                    Header="Recent Notifications"
                    Visibility="{Binding Notifications.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter={StaticResource BoolToVisibilityConverter}}">
                    <ListBox
                        Height="80"
                        Background="#FFFDE7"
                        ItemsSource="{Binding Notifications}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="5"
                                    Background="#FFF8E1"
                                    FontSize="12"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

                <!--  Cache Information Panel  -->
                <GroupBox Margin="0,0,0,15" Header="Cache Information">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="12"
                            Text="User Cache Keys:" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="12"
                            Text="{Binding CacheInfo.UserAccountKeys}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontSize="12"
                            Text="Local Cache Keys:" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="12"
                            Text="{Binding CacheInfo.LocalMachineKeys}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontSize="12"
                            Text="Secure Cache Keys:" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            FontSize="12"
                            Text="{Binding CacheInfo.SecureKeys}" />
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer Actions  -->
        <Border
            Grid.Row="2"
            Padding="20"
            Background="#F5F5F5">
            <WrapPanel HorizontalAlignment="Center">
                <Button
                    Command="{Binding RefreshCommand}"
                    Content="Refresh"
                    Style="{StaticResource SecondaryButton}" />
                <Button
                    Command="{Binding ClearCompletedCommand}"
                    Content="Clear Completed"
                    Style="{StaticResource SecondaryButton}" />
                <Button
                    Command="{Binding LoadSampleDataCommand}"
                    Content="Load Sample"
                    Style="{StaticResource SecondaryButton}" />
                <Button
                    Command="{Binding CleanupCacheCommand}"
                    Content="Cleanup Cache"
                    Style="{StaticResource SecondaryButton}" />
                <Button
                    Command="{Binding ExitCommand}"
                    Content="Exit"
                    Style="{StaticResource PrimaryButton}" />
            </WrapPanel>
        </Border>

        <!--  Loading Indicator  -->
        <Border
            Grid.Row="1"
            Background="Black"
            Opacity="0.5"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="200"
                    Height="20"
                    IsIndeterminate="True" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Text="Loading..." />
            </StackPanel>
        </Border>
    </Grid>

</Window>
